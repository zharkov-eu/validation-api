{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": [true, 120],
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [true, 2],
    "interface-over-type-literal": false,
    "max-classes-per-file": [true, 1]
  }
}
